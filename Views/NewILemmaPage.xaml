<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="LemmaApp.Views.NewLemmaPage"
		     Title="Organiser Lemma">
   
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            
            <Label Text="Ajouter Lemma" FontSize="Medium" />
            <Editor Text="{Binding lemma.theme}" FontSize="Small" Margin="0" />
            <Editor Text="{Binding lemma.lieu}" FontSize="Small" Margin="0" />
            <Editor Text="{Binding lemma.description}" FontSize="Small" Margin="0" />
            <Editor Text="{Binding lemma.date}" FontSize="Small" Margin="0" />
            <Button Margin="0,10,0,0" Text="Enregistrer"   BackgroundColor="{StaticResource Primary}" TextColor="White" />


        </StackLayout>
    </ContentPage.Content>
   
</ContentPage>
